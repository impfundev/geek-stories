// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
}

model User {
  id            String    @id @unique @default(uuid())
  userName      String    @unique @db.VarChar(50)
  email         String    @unique @db.VarChar(50)
  password      String    @db.Text
  firstName     String?   @db.VarChar(50)
  lastName      String?   @db.VarChar(50)
  bio           String?   @db.VarChar(150)
  role          Roles
  posts         Posts[]
  pages         Pages[]
  comments      Comments[]

  subscription     Subscription? @relation(fields: [subscription_id], references: [id])
  subscription_id  Int?

  subscribeStartAt       DateTime?
  subscribeEndAt         DateTime?
  payment_history        Payment_History[]
  site_info              Site_Info?
  api_key                Api_Key?

  @@map("user")
}

model Api_Key {
  id        Int     @id @default(autoincrement())
  value     String  @unique

  user      User    @relation(fields: [user_id], references: [id])
  user_id   String  @unique
}

model Site_Info {
  id            Int       @id @unique @default(autoincrement())
  name          String
  description   String
  logo          String    @default("https://seeklogo.com/images/N/next-js-logo-8FCFF51DD2-seeklogo.com.png")

  user          User?      @relation(fields: [user_id], references: [id])
  user_id       String?    @unique

  @@map("site_info")
}

model Subscription {
  id            Int       @id @unique @default(autoincrement())
  type          String
  price         String
  description   String
  benefit       Json

  user              User[]
  payment_history   Payment_History[]

  @@map("subscription")
}

model Payment_History {
  id                String    @id @unique
  date              DateTime  @default(now())
  status            String

  subscription      Subscription @relation(fields: [subscription_id], references: [id])
  subscription_id   Int

  user              User @relation(fields: [user_id], references: [id])
  user_id           String

  @@map("payment_history")
}

model Posts {
  id                Int       @id @default(autoincrement())
  author            User      @relation(fields: [authorId], references: [id])
  authorId          String
  title             String    @db.VarChar(85)
  createAt          DateTime  @default(now())   
  updateAt          DateTime  @default(now())   
  content           String?   @db.Text
  jsonContent       Json?     @db.Json
  excerpt           String?   @db.VarChar(150)
  published         Published
  tags              Tags[]
  featured          Boolean   @default(false)
  thumbnail_url     String?
  thumbnail_alt     String?
  thumbnail_width   String?
  thumbnail_height  String?
  comments          Comments[]

  @@map("posts")
}

model Comments {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  content       String    @db.Text

  post          Posts?    @relation(fields: [postId], references: [id])
  postId        Int?

  createAt      DateTime  @default(now())   
  updateAt      DateTime  @default(now())  

  @@map("comments")
}

model Pages {
  id                Int       @id @default(autoincrement())
  author            User      @relation(fields: [authorId], references: [id])
  authorId          String
  title             String    @db.VarChar(85)
  createAt          DateTime  @default(now())   
  updateAt          DateTime  @default(now())   
  content           String?   @db.Text
  jsonContent       Json?     @db.Json
  published         Published

  @@map("pages")
}

model Tags {
  id       Int        @id @unique @default(autoincrement())
  name     String?    @db.VarChar(25)
  posts    Posts[]

  @@map("tags")
}

enum Published {
  draft
  upload
}

enum Roles {
  admin
  editor
  author
  member
}